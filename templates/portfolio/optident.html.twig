{% trans_default_domain 'portfolio' %}
<style>
.main-row {
    gap: 10rem;
}

@media screen and (max-width: 768px) {
    .main-row {
        gap: 5rem;
    }

    .optident-logo {
        width: 100%;
    }
}
</style>
<div class="row main-row">
    <div class="col" style="flex: 1">
        <div class="row mt-2">
            <div class="col flex-end w-100">
                <div>
                    <h1 class="p-header" style="display: inline-block">Website</h1><sub> (01)</sub>
                </div>
                <span class="p-name">{% trans %}Optident{% endtrans %}</span>
            </div>
        </div>
        <p class="p-desc">
            {% trans %}Strona internetowa one-page powstała dla gabinetu stomatologicznego w Libiążu.{% endtrans %}
