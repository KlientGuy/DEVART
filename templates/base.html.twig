        <script>
            document.addEventListener('DOMContentLoaded', () => {

                const burgerButton = document.querySelector('.burger-button');
                const socialsNavbar = document.querySelector('.socials-navbar');
                const mobileOverlay = document.querySelector('.mobile-overlay');

                burgerButton.addEventListener('click', () => {
                    const screenWidth = window.innerWidth;
                    burgerButton.classList.toggle('active');

                    if (screenWidth > 840) {
                        if (socialsNavbar.classList.contains('active')) {
                            socialsNavbar.classList.add('deactivating');
                            setTimeout(() => {
                                socialsNavbar.classList.remove('active');
                                socialsNavbar.classList.remove('deactivating');
                            }, 100);
                        } else {
                            socialsNavbar.classList.add('active');
                        }
                    } else {
                        mobileOverlay.classList.toggle('active');
                    }
                });


                mobileOverlay.addEventListener('click', (e) => {
                    if (e.target === mobileOverlay) {
                        mobileOverlay.classList.remove('active');
                        burgerButton.classList.remove('active');
                    }
                });

                document.querySelectorAll('.mobile-menu-link').forEach(link => {
                    link.addEventListener('click', () => {
                        mobileOverlay.classList.remove('active');
                        burgerButton.classList.remove('active');
                    });
                });

            })
        </script>
