        <script>
        let consentCookie = getCookie('consent');
        window.dataLayer = window.dataLayer || [];

        function gtag(){dataLayer.push(arguments);}

        if(consentCookie === 'true') {
            loadAnalytics();
        }
        else if(consentCookie !== 'false') {
            document.addEventListener('DOMContentLoaded', () => {
                document.querySelector('.cookie-consent').classList.remove('d-none');
            })
        }

        function acceptCookies() {
            document.cookie = 'consent=true';
            document.querySelector('.cookie-consent').remove();
            loadAnalytics();
        }

        function declineCookies() {
            document.cookie = 'consent=false';
            document.querySelector('.cookie-consent').remove();
        }

        function loadAnalytics() {
            const script = document.createElement('script');
            script.src = 'https://www.googletagmanager.com/gtag/js?id=G-9J9PH0X240';
            script.async = "true";
            document.querySelector('head').append(script);
            gtag('js', new Date());
            gtag('config', 'G-9J9PH0X240');
        }

        function getCookie(cname) {
            let name = cname + "=";
            let ca = document.cookie.split(';');
            for(let i = 0; i < ca.length; i++) {
                let c = ca[i];
                while (c.charAt(0) == ' ') {
                    c = c.substring(1);
                }
                if (c.indexOf(name) == 0) {
                    return c.substring(name.length, c.length);
                }
            }
            return "";
        }
        </script>
